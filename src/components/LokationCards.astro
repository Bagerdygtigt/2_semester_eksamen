---
const {image, alt, title, adress, times, link, illustration} = Astro.props;
import Button from "../components/Button.astro";
---

<div class="locationcard">
    <img class="frontpic" src={image} alt={alt}>
    <div class="grid_1-1">
      <div>
        <h2>{title}</h2>
        <p>{adress}</p>
          <h3>Åbningstider</h3>
          <p>{times}</p>
          <a href={link}><Button variant="primary" size="small" >LÆS MERE</Button></a>
        </div>
        <div>
        <img class="cardillustration" src={illustration} alt="illustration">
        </div>
    </div>
</div>

<style>

.grid_1-1{
  display: grid;
  grid-template-columns: 1fr 1fr;
}
.frontpic {
  img {width: 100%;}
  display: block;
}

.cardillustration {
  width: 180px; }

  a {
  text-decoration: none;
}

@media (min-width: 800px) {

  .locationcard {
  max-width: 350px;
}
.cardillustration {
  display: none;
}


}

</style>