---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
  button {
    display: flex;
    justify-content: center; /* horisontal centering */
    align-items: center; /* vertikal centering */
    padding: 1rem;
    color: var(--color-primary);
    background-color: transparent;
    cursor: pointer;
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
  }

  .primary,
  .secondary {
    border-style: solid;
    border-width: 4px;
    border-radius: 3px;
  }

  .primary {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .primary:hover {
    background-color: var(--color-accent);
    color: var(--color-primary);
  }

  .secondary {
    border-color: var(--color-accent-4);
    color: var(--color-primary);
  }

  .secondary:hover {
    background-color: var(--color-secondary);
    border-color: var(--color-secondary);
    /* tekstfarve bevares */
  }

  .big {
    width: 500px;
    height: 40px;
  }

  .medium {
    width: 370px;
    height: 40px;
  }

  .small {
    width: 200px;
    height: 40px;
  }

  

</style>
