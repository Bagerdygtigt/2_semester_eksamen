---
const { data } = Astro.props;
console.log(data);
---

<article>
  <a href={`products/${data.productname}`}>
    <img src={data.imgs} alt={data.productname} />
  </a>
  <h2>{data.productname}</h2>
  <p>{data.price}DKK</p>
</article>

<style>
  h2 {
    text-align: center;
    font-size: 20px;
  }
  p {
    text-align: center;
  }
  img:hover {
    transform: scale(1.03);
    filter: brightness(50%);
    transition: transform 0.3s ease;
    transition: filter 0.3s ease;
  }

  img {
    width: 100%;
  }
  article {
    display: grid;
    grid-template-rows: subgrid;
    grid-row: span 3;
  }
</style>
