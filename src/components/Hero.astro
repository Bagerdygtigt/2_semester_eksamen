---
import Button from "../components/Button.astro";
---

<section class="hero full-bleed">
  <img src="/imgs/heroimg.webp" alt="Hero image" />

  <div class="hero-content">
    <h1>Bagerdygtigt</h1>
    <a href="#products">
      <Button />
    </a>
  </div>
</section>

<style>
  main {
    max-width: none;
  }
  .full-bleed {
    width: 100%;
    height: 10%;

    max-width: none;
  }

  .hero {
    position: relative;
    height: 100vh;
    width: 100%;
    overflow: hidden;
  }

  .hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    position: absolute;
    top: 60%;
    left: 20%;
    transform: translate(-10%, -50%);
    text-align: left;
    padding: 1rem;
    color: #f9aa16;
  }
</style>
